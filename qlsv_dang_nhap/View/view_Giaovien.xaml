<Window x:Class="qlsv_dang_nhap.View.view_Giaovien"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:qlsv_dang_nhap.View"
        mc:Ignorable="d"
        Title="view_Giaovien" Height="600" Width="900">
    <Border>
            <TabControl FontSize="16" Background="White">
                <!--tab xem thong tin-->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Images/icon_admin/icons8-student-24.png"
                               Width="16" Height="16"/>
                            <TextBlock Text="Thông tin sinh viên"
                                   FontSize="16" FontFamily="Arial" FontWeight="Bold"/>
                        </StackPanel>
                    </TabItem.Header>
                    <ListView HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="MaSV" Width="Auto"  DisplayMemberBinding="{Binding MaSV}"/>
                                <GridViewColumn Header="Họ và tên" Width="Auto" DisplayMemberBinding="{Binding HovaTen}"/>
                                <GridViewColumn Header="Ngày/Tháng/Năm sinh" Width="Auto" DisplayMemberBinding="{Binding Date}"/>
                                <GridViewColumn Header="Giới tính" Width="Auto" DisplayMemberBinding="{Binding Gioitinh}"/>
                                <GridViewColumn Header="Ngành" Width="Auto" DisplayMemberBinding="{Binding Nganh}"/>
                                <GridViewColumn Header="Lớp" Width="Auto" DisplayMemberBinding="{Binding Lop}"/>
                                <GridViewColumn Header="Người giám hộ" Width="Auto" DisplayMemberBinding="{Binding Nguoigiamho}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Images/icon_admin/icons8-book-50.png"
                               Width="16" Height="16"/>
                            <TextBlock Text="Quản lý điểm"
                        FontSize="16" FontFamily="Arial" FontWeight="Bold"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="0,0,2,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="220"/>
                                    <RowDefinition Height="220"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0">
                                    <ListView HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch" Width="200" Height="200">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn Header="Lớp" Width="Auto"  DisplayMemberBinding="{Binding Lop}"/>
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                </Border>
                            <Border Grid.Row="1">
                                <ListView HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch" Width="200" Height="200">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="Môn học" Width="Auto"  DisplayMemberBinding="{Binding Lop}"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Border>
                            <Border Grid.Row="2">
                                <StackPanel>
                                    <Button Height="30" Width="150"
                                            Content="Chọn" FontSize="14" FontWeight="Bold"
                                            Margin="0,10,0,0"/>
                                    <Button Height="30" Width="150"
                                            Content="Lưu" FontSize="14" FontWeight="Bold"
                                            Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                        </Border>
                    <Border Grid.Column="1">
                        <ListView HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Tên Sinh viên" Width="Auto"  DisplayMemberBinding="{Binding TenSV}"/>
                                    <GridViewColumn Header="Lớp" Width="Auto" DisplayMemberBinding="{Binding Lop}"/>
                                    <GridViewColumn Header="Tên Môn" Width="Auto" DisplayMemberBinding="{Binding MonHoc}"/>
                                    <GridViewColumn Header="Điểm quá trình" Width="Auto" DisplayMemberBinding="{Binding ĐiemQT}"/>
                                    <GridViewColumn Header="Điểm thi" Width="Auto" DisplayMemberBinding="{Binding DiemThi}"/>
                                    <GridViewColumn Header="Điểm tổng kết" Width="Auto" DisplayMemberBinding="{Binding DiemTK}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Border>
                    </Grid>
                </TabItem>
            </TabControl>
        </Border>
</Window>
