<Window x:Class="qlsv_dang_nhap.View.view_PhongCTSV"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:qlsv_dang_nhap.View"
        mc:Ignorable="d"
        Title="view_PhongCTSV" Height="600" Width="1200">
    <Grid>
        <TabControl>
            <!--tab xem thong tin-->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Images/icon_admin/icons8-student-24.png"
                               Width="16" Height="16"/>
                        <TextBlock Text="Thông tin sinh viên"
                   FontSize="16" FontFamily="Arial" FontWeight="Bold"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0"
                            BorderBrush="LightGray" BorderThickness="0,0,2,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="55"/>
                                <RowDefinition Height="55"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="60"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <!--maSV-->
                            <Border Grid.Row="0" >
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Mã sinh viên: "
                    FontSize="14" FontFamily="Arial" FontWeight="Bold"
                    Margin="10,0,0,0"/>
                                    <TextBlock Text="ma_sv"
                    FontSize="14" FontFamily="Arial" Foreground="Red"/>
                                </StackPanel>
                            </Border>
                            <!--ho_va_ten-->
                            <Border Grid.Row="1" Margin="0,5,0,0">
                                <Grid Margin="10,0,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0">
                                        <TextBlock Text="Họ và tên:"
                       FontSize="14" FontFamily="Arial" FontWeight="Bold"
                       VerticalAlignment="Center" Margin="0,5,0,0"/>
                                    </Border>
                                    <Border Grid.Row="1">
                                        <TextBox Width="225" Height="20" FontSize="12"
                     VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                    </Border>
                                </Grid>
                            </Border>
                            <!--date-->
                            <Border Grid.Row="2">
                                <Grid Margin="10,0,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0">
                                        <TextBlock Text="Ngày/Tháng/Năm sinh:"
                       FontSize="14" FontFamily="Arial" FontWeight="Bold"
                       VerticalAlignment="Center" Margin="0,5,0,0"/>
                                    </Border>
                                    <Border Grid.Row="1">
                                        <DatePicker Name="dpNgaySinh"
                        Width="225"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        FontSize="12"
                        SelectedDate="{x:Null}"/>
                                    </Border>
                                </Grid>
                            </Border>
                            <!--gioi_tinh-->
                            <Border Grid.Row="3" Margin="0,10,0,0">
                                <StackPanel Orientation="Horizontal" Margin="10,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="Giới Tính: " FontSize="14" FontWeight="Bold"
                    VerticalAlignment="Center"
                    />
                                    <ComboBox Margin="12,0,0,0"
                   Width="145" Height="22" FontSize="12"
                   SelectedIndex="0">
                                        <ComboBoxItem Content="Nam" FontSize="14"/>
                                        <ComboBoxItem Content="Nữ" FontSize="14"/>
                                    </ComboBox>
                                </StackPanel>
                            </Border>
                            <!--Ngành-->
                            <Border Grid.Row="4">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Ngành:" FontSize="14" FontWeight="Bold"
                    VerticalAlignment="Center"
                    Margin="10,0,0,0"/>
                                    <ComboBox Margin="30,0,0,0"
                   Width="145" Height="22"
                   VerticalAlignment="Center"
                   SelectedIndex="0" FontSize="12" >
                                        <ComboBoxItem Content="ngành" FontSize="14"/>
                                    </ComboBox>
                                </StackPanel>
                            </Border>
                            <!--lớp-->
                            <Border Grid.Row="5" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Lớp:" FontSize="14" FontWeight="Bold"
                   Margin="10,0,0,0"/>
                                    <TextBox Width="145" Height="22" Margin="51,0,0,0"
                 FontSize="12"/>
                                </StackPanel>
                            </Border>
                            <!--Nguoi giam ho-->
                            <Border Grid.Row="6" Margin="0,5,0,0">
                                <Grid Margin="10,0,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0">
                                        <TextBlock Text="Người giám hộ:"
  FontSize="14" FontFamily="Arial" FontWeight="Bold"
  VerticalAlignment="Center" Margin="0,5,0,0"/>
                                    </Border>
                                    <Border Grid.Row="1">
                                        <TextBox Width="225" Height="20" FontSize="12"
VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                    </Border>
                                </Grid>
                            </Border>
                            
                            <!--button-->
                            <Border  Grid.Row="7" Margin="0,20,0,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <!--button them-->
                                            <Border Grid.Row="0">
                                                <Button x:Name="themsinhvien" Click="themsinhvien_click"
                                                    Content="Cập nhật thay đổi"
                                                        Width="150" Height="30"
                                                        FontWeight="Bold"
                                                        FontSize="14"/>
                                            </Border>
                                            <!--button sửa-->
                                            <Border Grid.Row="1"/>
                                            <!--button xóa-->
                                            <Border Grid.Row="2"/>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                    <Border Grid.Column="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <!--search-->
                            <Border Grid.Row="0">
                                <StackPanel Height="30" Width="310"
                                            Orientation="Horizontal" HorizontalAlignment="Right"
                                            Margin="0,0,5,0">
                                    <Border CornerRadius="5" BorderBrush="#415894" BorderThickness="1" Background="White">
                                        <Grid>
                                            <TextBox x:Name="txtSearch"
                                                     Width="290"
                                                     Height="25"
                                                     FontSize="11"
                                                     Padding="5"
                                                     VerticalContentAlignment="Center"
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     Foreground="#000000"
                                                     TextChanged="txtSearch_TextChanged"
                                                     GotFocus="txtSearch_GotFocus"
                                                     LostFocus="txtSearch_LostFocus"/>
                                            <TextBlock x:Name="txtPlaceholder"
                                                       Text="Tìm kiếm..."
                                                       FontSize="14"
                                                       Foreground="Gray"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Left"
                                                       Margin="5,0,0,0"
                                                       IsHitTestVisible="False"/>
                                            <Button x:Name="btnSearchIcon"
                                                    Width="22"
                                                    Height="22"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Right"
                                                    Margin="0,0,5,0"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Click="btnSearchIcon_Click"
                                                    KeyDown="SearchEnter">
                                                <Button.Content>
                                                    <Image Source="/Images/icons8-search-50.png"
                                                           Width="22"
                                                           Height="22"/>
                                                </Button.Content>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Border>
                            <Border Grid.Row="1">
                                <Grid>
                                    <DataGrid x:Name="dssv" AutoGenerateColumns="True" IsReadOnly="False" />
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            <!--quan ly diem-->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Images/icon_admin/icons8-book-48.png" Width="16" Height="16"/>
                        <TextBlock Text="Quản lý điểm rèn luyện" FontSize="16" FontFamily="Arial" FontWeight="Bold"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition  Width="400"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="0,0,2,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="400" />
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Margin="0,30,0,0">
                                <ListView x:Name="dssvmini" SelectionChanged="selectionDSSVMini"
                                    HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          Width="350">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="MaSV" Width="Auto"  DisplayMemberBinding="{Binding MaSV}"/>
                                            <GridViewColumn Header="Tên sinh viên" Width="Auto" DisplayMemberBinding="{Binding Hoten}"/>
                                            <GridViewColumn Header="Tên lớp" Width="Auto" DisplayMemberBinding="{Binding Tenlop}"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Border>
                            <Border Grid.Row="1">
                                <StackPanel Orientation="Horizontal">
                                    <!--btn chon sinh vien-->
                                    <Button Content="Chọn sinh viên" VerticalAlignment="Top"
                                            Margin="30,20,0,0"
                                            Width="150" Height="30"
                                            FontWeight="Bold"
                                            FontSize="14"/>
                                    <!--btn luu thay doi-->
                                    <Button Content="Lưu thay đổi" VerticalAlignment="Top"
                                            Margin="30,20,0,0"
                                            Width="150" Height="30"
                                            FontWeight="Bold"
                                            FontSize="14"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                    <Border Grid.Column="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Mã sinh viên:" FontSize="14" FontWeight="Bold"
                                               Margin="10,10,0,0"/>
                                    <TextBox x:Name="txtMasv" FontSize="14" FontWeight="Bold" IsReadOnly="True"
                                               Foreground="Red" Width="107" Height="18"/>
                                </StackPanel>
                            </Border>
                            <Border Grid.Row="1">
                                <Grid>
                                    <DataGrid x:Name="drlsv" AutoGenerateColumns="True" IsReadOnly="False" />
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            <!--quan ly lop hoc-->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Images/icon_admin/icons8-elective-64.png" Width="16" Height="16"/>
                        <TextBlock Text="Quản lý lớp học" FontSize="16" FontFamily="Arial" FontWeight="Bold"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                    <Border Grid.Column="0"  BorderBrush="LightGray" BorderThickness="0,0,2,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="300"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0">
                                <ListView HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          Width="250" Margin="0,10,0,0">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="Lớp" Width="Auto"  DisplayMemberBinding="{Binding Lop}"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Border>
                            <StackPanel Grid.Row="1">
                                <Button Content="Thêm" Height="30" Width="150"
                                        FontSize="14"  FontWeight="Bold" Margin="0,10,0,0"/>
                                <Button Content="Sửa" Height="30" Width="150"
                                        FontSize="14"  FontWeight="Bold" Margin="0,10,0,0"/>
                                <Button Content="Xóa" Height="30" Width="150"
                                        FontSize="14"  FontWeight="Bold" Margin="0,10,0,0"/>            
                            </StackPanel>
                        </Grid>
                    </Border>
                    <Border Grid.Column="1">
                        <ListView HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"
                                  Margin="0,10,0,0">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Lớp" Width="Auto"  DisplayMemberBinding="{Binding Lop}"/>
                                    <GridViewColumn Header="MaSV" Width="Auto"  DisplayMemberBinding="{Binding MaSV}"/>
                                    <GridViewColumn Header="Tên sinh viên" Width="Auto"  DisplayMemberBinding="{Binding TenSV}"/>
                                    <GridViewColumn Header="Ngày sinh" Width="Auto"  DisplayMemberBinding="{Binding Date}"/>
                                    <GridViewColumn Header="Giới tính" Width="Auto"  DisplayMemberBinding="{Binding GioiTinh}"/>
                                    <GridViewColumn Header="Người giám hộ" Width="Auto"  DisplayMemberBinding="{Binding NguoiGiamHO}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
